{
  "name": "@trycourier/react-designer",
  "version": "0.0.1",
  "description": "React-based rich text designer component",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./styles.css": {
      "import": "./dist/esm/styles.css",
      "require": "./dist/cjs/styles.css",
      "default": "./dist/styles.css"
    },
    "./next": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && node build.js",
    "dev": "node build.js --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "analyze": "node build.js --analyze",
    "prepublishOnly": "pnpm run build",
    "release": "node scripts/publish.js",
    "release:patch": "node scripts/publish.js --version=patch",
    "release:minor": "node scripts/publish.js --version=minor",
    "release:major": "node scripts/publish.js --version=major",
    "release:dry-run": "node scripts/publish.js --dry-run",
    "release:canary": "node scripts/publish.js --canary"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@tippyjs/react": "^4.2.6",
    "@tiptap/core": "^2.9.0",
    "@tiptap/extension-code-block-lowlight": "^2.10.3",
    "@tiptap/extension-color": "^2.10.2",
    "@tiptap/extension-hard-break": "^2.11.2",
    "@tiptap/extension-image": "^2.10.3",
    "@tiptap/extension-link": "^2.10.3",
    "@tiptap/extension-placeholder": "^2.0.0",
    "@tiptap/extension-text-align": "^2.10.2",
    "@tiptap/extension-typography": "^2.10.2",
    "@tiptap/extension-underline": "^2.10.2",
    "@tiptap/pm": "^2.9.0",
    "@tiptap/react": "^2.9.0",
    "@tiptap/starter-kit": "^2.9.0",
    "@tiptap/suggestion": "^2.10.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "jotai": "^2.11.1",
    "lucide-react": "^0.473.0",
    "next-themes": "^0.4.5",
    "react-hook-form": "^7.53.2",
    "sonner": "^2.0.1",
    "tailwind-merge": "^1.14.0",
    "uuid": "^11.0.3",
    "yjs": "^13.6.24",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "esbuild": "^0.19.0",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-style-plugin": "^1.6.3",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.49",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "editor",
    "rich-text",
    "wysiwyg",
    "tiptap"
  ],
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/trycourier/react-editor.git"
  },
  "bugs": {
    "url": "https://github.com/trycourier/react-editor/issues"
  }
}
